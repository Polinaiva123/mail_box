@model EmailActionViewModel

@{
    ViewData["Title"] = "Index";
}
<style>
form {
    display: flex;
    flex-direction: column;

    gap: 1rem;
}

form textarea {
    width: 100%;
}
</style>
<h1>Utwórz wiadomość</h1>

@if (Model.ActionCompleted)
{
    <div>
        <p>Wiadomość została dodana</p>
        <a asp-action="Index">Wszystkie wiadomości</a>
    </div>
}
else
{
    <a asp-action="Index">Wszystkie wiadomości</a>
    <form asp-controller="Email" asp-action="Create" method="POST">
        <label>Od: <input type="text" name="formData.From" placeholder="jankowalski@wp.pl" required /></label>
        <label>Imię: <input type="text" name="formData.Name" placeholder="Jan Kowalski" required /></label>
        <label>Do: <input type="text" name="formData.To" placeholder="annanowak@gmail.com" required /></label>
        <label>Tytuł: <input type="text" name="formData.Title" placeholder="Cześć!" required /></label>
        <label>Treść: <textarea name="formData.Text" placeholder="Napisz wiadomość..." required></textarea></label>
        <input type="submit" value="Wyślij" />
    </form>    
}
