@page "{id:int}"
@model App.Pages.Emails.DetailsModel
@{
}

<h2>Wiadomość</h2>
<a asp-page="./Index">Wszystkie wiadomości</a>

<div class="email">
    <div class="email">
        <label>Odbiorca: <span>@Model.Email.To.Name (@Model.Email.To.AdresEmail)</span></label>
        <label>Nadawca: <span>@Model.Email.From.Name (@Model.Email.From.AdresEmail)</span></label>
        <div class="separator"></div>
        <label><span>@Model.Email.Title</span></label>
        <div class="separator"></div>
        <label><span>@Model.Email.Text</span></label>

        <form method="post">
            <input type="submit" value="Usuń wiadomość" class="red" />
        </form>
    </div>
</div>